{
    "name": "vozinterview-frontend",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "Real-time interview assistant overlay",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && electron-builder"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "vite": "^5.0.8",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.vozinterview.app",
        "productName": "VozInterview",
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": "nsis"
        }
    }
}